<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebisustats.ui.stock.AddProductActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Volver"
        android:fontFamily="@font/mooli_normal"
        android:backgroundTint="#00FFFFFF"
        android:textColor="@color/main"
        app:icon="@drawable/ic_back"
        app:iconTint="@color/main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:fontFamily="@font/mooli_normal"
        android:textSize="20sp"
        android:textColor="@color/main"
        android:text="AÃ±adir Nuevo Producto" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mooli_normal"
                android:textSize="17sp"
                android:textColor="@color/main"
                android:text="Nombre: " />

            <EditText
                android:id="@+id/et_NombreProducto"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/mooli_normal"
                android:hint="ej: Polera Estampado Doble"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mooli_normal"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:text="Precio Costo: " />

            <EditText
                android:id="@+id/et_precioCosto"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/mooli_normal"
                android:hint="$0"
                android:inputType="number" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mooli_normal"
                android:textSize="17sp"
                android:textColor="@color/main"
                android:text="Precio Venta: " />

            <EditText
                android:id="@+id/et_PrecioVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mooli_normal"
                android:ems="10"
                android:hint="$0"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: "
            android:textSize="17sp"
            android:textColor="@color/main"
            android:fontFamily="@font/mooli_normal"/>

        <EditText
            android:id="@+id/et_CantidadProductos"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/mooli_normal"
            android:hint=" 0"
            android:inputType="number"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/AddProduct_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:backgroundTint="@color/main"
        android:fontFamily="@font/mooli_normal"
        android:text="Crear Producto" />

</LinearLayout>